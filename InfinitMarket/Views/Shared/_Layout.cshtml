@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | InfiniteMarket</title>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" asp-append-version="true">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- HTML5 Shim and Respond.js IE11 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 11]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Favicon icon -->
    <link rel="icon" href="~/default.png" type="image/x-icon">
    <!-- fontawesome icon -->
    <link rel="stylesheet" href="~/assets/fonts/fontawesome/css/fontawesome-all.min.css">
    <!-- animation css -->
    <link rel="stylesheet" href="~/assets/plugins/animation/css/animate.min.css">
    <!-- vendor css -->
    <link rel="stylesheet" href="~/assets/css/style.css">

</head>

<body>
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="loader-bg">
            <div class="loader-track">
                <div class="loader-fill"></div>
            </div>
        </div>
        <!-- [ Pre-loader ] End -->
        <!-- [ navigation menu ] start -->
        <nav class="pcoded-navbar">
            <div class="navbar-wrapper">
                <div class="navbar-brand header-logo">
                    <a href="http://localhost:3000" class="b-brand">
                        <div class="b-bg">
                            <i>
                                <img class="logoImg"
                                     src="~/default.png"
                                     alt="" />
                            </i>
                        </div>
                        <span class="b-title">InfinitMarket</span>
                    </a>
                    <a class="mobile-menu" id="mobile-collapse" href="javascript:"><span></span></a>
                </div>
                <div class="navbar-content scroll-div">
                    <ul class="nav pcoded-inner-navbar">
                        <li data-username="dashboard Default Ecommerce CRM Analytics Crypto Project" class="nav-item">
                            <a href="http://localhost:3000/" class="nav-link "><span class="pcoded-micon"><i class="feather icon-home"></i></span><span class="pcoded-mtext">Home</span></a>
                        </li>
                        <li data-username="dashboard Default Ecommerce CRM Analytics Crypto Project" class="nav-item">
                            <a href="http://localhost:3000/Produktet" class="nav-link "><span class="pcoded-micon"><i class="feather icon-package"></i></span><span class="pcoded-mtext">Produktet</span></a>
                        </li>
                        <li data-username="dashboard" class="nav-item">
                            <a href="http://localhost:3000/AboutUs" class="nav-link "><span class="pcoded-micon"><i class="feather icon-info"></i></span><span class="pcoded-mtext">Rreth Nesh</span></a>
                        </li>
                        <li data-username="dashboard Default Ecommerce CRM Analytics Crypto Project" class="nav-item">
                            <a href="http://localhost:3000/ContactUs" class="nav-link "><span class="pcoded-micon"><i class="feather icon-at-sign"></i></span><span class="pcoded-mtext">Na Kontaktoni</span></a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var user = await UserManager.GetUserAsync(User);
                            var userRoles = (await UserManager.GetRolesAsync(user)).ToList();

                            // Displaying the user's email

                            // Displaying the user's roles
                            @if (userRoles.Contains("Admin"))
                            {
                                <!-- [Admin Menu] Start-->
                                <li class="nav-item pcoded-menu-caption  ">
                                    <label>Admin Dashboard</label>
                                </li>
                                <li class="nav-item pcoded-hasmenu  ">
                                    <a class="nav-link">
                                        <span class="pcoded-micon"><i class="feather icon-home"></i></span>
                                        <span class="pcoded-mtext">Produktet</span>
                                    </a>
                                    <ul class="pcoded-submenu    -flush">
                                        <li><a class="nav-link" href="http://localhost:3000/admin/produktet/ListaEProdukteve" target="">Lista e Produkteve</a></li>
                                        <li><a class="nav-link" href="http://localhost:3000/admin/produktet/zbritjet" target="">Zbritjet</a></li>
                                        <li><a class="nav-link" href="http://localhost:3000/admin/produktet/kategorite" target="">Kategorite</a></li>
                                        <li><a class="nav-link" href="http://localhost:3000/admin/produktet/kompanite" target="">Kompanite</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item pcoded-hasmenu  ">
                                    <a class="nav-link">
                                        <span class="pcoded-micon">
                                            <i class="feather icon-sliders"></i>
                                        </span>
                                        <span class="pcoded-mtext">Te Ndryshme</span>
                                    </a>
                                    <ul class="pcoded-submenu    -flush">
                                        <li><a class="nav-link" href="http://localhost:3000/admin/TeNdryshme/OfertatSlider" target="">Ofertat Slider Home</a></li>
                                        <li><a class="nav-link" href="http://localhost:3000/admin/TeNdryshme/KodiZbritjes" target="">Kodi Zbritjes</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item pcoded-hasmenu  ">
                                    <a class="nav-link">
                                        <span class="pcoded-micon">
                                            <i class="feather icon-info"></i>
                                        </span>
                                        <span class="pcoded-mtext">Biznesi</span>
                                    </a>
                                    <ul class="pcoded-submenu    -flush">
                                        <li>
                                            <a class="nav-link" href="http://localhost:3000/admin/Biznesi/TeDhenatEBiznesit" target="">Te Dhenat E Biznesit</a>
                                        </li>
                                        <li>
                                            <a class="nav-link" href="http://localhost:3000/admin/Biznesi/Bankat" target="">Bankat</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item pcoded-hasmenu  ">
                                    <a class="nav-link">
                                        <span class="pcoded-micon">
                                            <i class="feather icon-info"></i>
                                        </span>
                                        <span class="pcoded-mtext">Klientet</span>
                                    </a>
                                    <ul class="pcoded-submenu    -flush">
                                        <li>
                                            <a class="nav-link" href="http://localhost:3000/admin/Klientet/ListaEKlienteve" target="">Lista e Klienteve</a>
                                        </li>
                                        <li><a class="nav-link" href="http://localhost:3000/admin/Klientet/ShportaEKlienteve" target="">Shportat e Klienteve</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a class="nav-link" href="http://localhost:3000/admin/Stafi" target="">
                                        <span class="pcoded-micon"><i class="feather icon-users"></i></span>
                                        <span class="pcoded-mtext">Stafi</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link" href="http://localhost:3000/admin/porosite" target="">
                                        <span class="pcoded-micon"> <i class="feather icon-package"></i></span>
                                        <span class="pcoded-mtext">Porosit</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link" href="http://localhost:3000/admin/mesazhet" target="">
                                        <span class="pcoded-micon"><i class="feather icon-at-sign"></i></span>
                                        <span class="pcoded-mtext">Mesazhet</span>
                                    </a>
                                </li>
                                <!-- [Admin Menu] End-->
                            }

                            @if (userRoles.Contains("Shites"))
                            {
                                <!-- [Shites Menu] Start-->
                                <li class="nav-item pcoded-menu-caption  "><label>Shites Dashboard</label></li>
                                <li class="nav-item pcoded-hasmenu  ">
                                    <a class="nav-link">
                                        <span class="pcoded-micon"><i class="feather icon-home"></i></span>
                                        <span class="pcoded-mtext">Produktet</span>
                                    </a>
                                    <ul class="pcoded-submenu    -flush">
                                        <li>
                                            <a class="nav-link" href="http://localhost:3000/admin/produktet/ListaEProdukteve" target="">Lista e Produkteve</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item pcoded-hasmenu  ">
                                    <a class="nav-link">
                                        <span class="pcoded-micon"><i class="feather icon-sliders"></i></span>
                                        <span class="pcoded-mtext">Te Ndryshme</span>
                                    </a>
                                    <ul class="pcoded-submenu    -flush">
                                        <li><a class="nav-link" href="http://localhost:3000/admin/TeNdryshme/KodiZbritjes" target="">Kodi Zbritjes</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item pcoded-hasmenu  ">
                                    <a class="nav-link">
                                        <span class="pcoded-micon">
                                            <i class="feather icon-info"></i>
                                        </span>
                                        <span class="pcoded-mtext">Klientet</span>
                                    </a>
                                    <ul class="pcoded-submenu    -flush">
                                        <li><a class="nav-link" href="http://localhost:3000/admin/Klientet/ListaEKlienteve" target="">Lista e Klienteve</a> </li>
                                        <li> <a class="nav-link" href="http://localhost:3000/admin/Klientet/ShportaEKlienteve" target="">Shportat e Klienteve</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a class="nav-link" href="http://localhost:3000/admin/porosite" target="">
                                        <span class="pcoded-micon"><i class="feather icon-package"></i></span>
                                        <span class="pcoded-mtext">Porosit</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link" href="http://localhost:3000/admin/mesazhet" target="">
                                        <span class="pcoded-micon"><i class="feather icon-at-sign"></i></span>
                                        <span class="pcoded-mtext">Mesazhet</span>
                                    </a>
                                </li>
                                <!-- [Shites Menu] End-->
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
        <!-- [ navigation menu ] end -->
        <!-- [ Header ] start -->
        <header class="navbar pcoded-header navbar-expand-lg navbar-light">
            <div class="m-header">
                <a class="mobile-menu" id="mobile-collapse1" href="javascript:"><span></span></a>
                <a href="index.html" class="b-brand">
                    <div class="b-bg">
                        <i class="feather icon-trending-up"></i>
                    </div>
                    <span class="b-title">InfinitMarket</span>
                </a>
            </div>
            <a class="mobile-menu" id="mobile-header" href="javascript:">
                <i class="feather icon-more-horizontal"></i>
            </a>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li><a href="javascript:" class="full-screen" onclick="javascript:toggleFullScreen()"><i class="feather icon-maximize"></i></a></li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li><a href="http://localhost:3000/shporta"><i class="feather icon-shopping-cart"></i></a></li>
                    <li>
                        <div class="dropdown drp-user">
                            <a href="javascript:" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="icon feather icon-settings"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right profile-notification">
                                <div class="pro-head">
                                    <span>@User.Identity?.Name</span>
                                    <a href="/Identity/Account/Logout" class="dud-logout" title="Logout">
                                        <i class="feather icon-log-out"></i>
                                    </a>
                                </div>
                                <ul class="pro-body">
                                    <li><a href="https://localhost:7251/Identity/Account/Manage" class="dropdown-item"><i class="feather icon-user"></i> Profile</a></li>
                                    <li><a href="http://localhost:3000/Dashboard/PorositEMia" class="dropdown-item"><i class="feather icon-shopping-cart"></i> Porosite</a></li>
                                    <li><a href="http://localhost:3000/ListaEDeshirave" class="dropdown-item"><i class="feather icon-heart"></i> Lista e Deshirave</a></li>
                                    <li><a class="dropdown-item" href="http://localhost:3000/Dashboard/MesazhetEMia"><i class="feather icon-message-circle"></i> Mesazhet e Mia</a></li>
                                </ul>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </header>
        <div class="pcoded-main-container">
            <div class="pcoded-wrapper">
                <div class="pcoded-content">
                    <div class="pcoded-inner-content">
                        <!-- [ breadcrumb ] start -->
                        <!-- [ breadcrumb ] end -->
                        <div class="main-body">
                            <div class="page-wrapper">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {

        @RenderBody()
    }


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/mdb.min.js" asp-append-version="true"></script>
    <script src="~/assets/js/vendor-all.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/assets/js/pcoded.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>