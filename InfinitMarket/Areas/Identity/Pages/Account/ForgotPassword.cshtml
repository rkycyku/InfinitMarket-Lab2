@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="auth-wrapper">
    <div class="auth-content">
        <div class="auth-bg">
            <span class="r"></span>
            <span class="r s"></span>
            <span class="r s"></span>
            <span class="r"></span>
        </div>
        <div class="card">
            <div class="card-body text-center">
                <div class="mb-4">
                        <img class="logoImgLoginReg" src="~/profile_crop.png" />
                </div>
                <h3 class="mb-4">Reset Password</h3>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-group mb-3">

                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
                </div>
                    <button type="submit"  class="btn btn-primary mb-4 shadow-2">Reset Password</button>
                    <p class="mb-0 text-muted">Don’t have an account? <a href="Register">Signup</a></p>

                </form>
            </div>
        </div>
    </div>
</div>

<!-- Required Js -->
<script src="assets/js/vendor-all.min.js"></script>
<script src="assets/plugins/bootstrap/js/bootstrap.min.js"></script>
<script src="assets/js/pcoded.min.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
